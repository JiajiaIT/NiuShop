    <script type="text/javascript" src="/content/niu/static/common/common_ca272729.js"></script>
    <script src="/content/niu/static/store/widget/store/list/unslider-min.js"></script>
    <script type="text/javascript" src="/content/niu/static/store/widget/store/list/list_e23783f9.js"></script>
